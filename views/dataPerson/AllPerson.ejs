<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../templates/navbarLater')%>
  <title>Personas</title>
</head>
<body>
   
    <div id="viewport">
        <div id="content">
            <div class="container-fluid">
                <table class="table table-light">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Celular</th>
                        <th scope="col">Dirreccion</th>
                        <th scope="col">Nombre mascota</th>
                        <th scope="col">Raza</th>
                        <th scope="col">Descripcion</th>
                        
                      </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < personas.length; i++){ %>
                            <tr>
                                <th scope="row"><%= i+1 %></th>
                                <td><%= personas[i].name %></td>
                                <td><%= personas[i].lastName %></td>
                                <td><%= personas[i].phone %></td>
                                <td><%= personas[i].direction %></td>
                                <td><%= personas[i].nameMascot %></td>
                                <td><%= personas[i].razaMascot %></td>
                                <td><%= personas[i].descriptionMascot %></td>
                                <td><a class="btn btn-primary" href="/onePersona/<%= personas[i]._id %>">Ver</a></td>
                                <td><a class="btn btn-primary" href="/update/<%= personas[i]._id %>">Actualizar</a></td>
                                <td><a class="btn btn-primary" href="/deletePersona/<%= personas[i]._id %>">Eliminar</a></td>
                            </tr>
                        <% } %>
                    </tbody>
                  </table>
            </div> 
          </div>
          <%- include('../partial/mjs')%>
            </div>
            </div>
          
            <%- include('../templates/footer')%>
</body>
</html>